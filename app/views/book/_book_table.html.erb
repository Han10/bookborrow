<div id="book_table_container">

	<% @books.each do |book| %>
	<div id="bookcontainer">
		<div id="book_photo">
			<%= image_tag book.thumbnail.url %>
		</div>
		<div id="book_info">
			<div id="book_title">
				<%= book.title %>
			</div>
			<div id="book_desc">
			    <%= book.desc book %>
			</div>
			<%= link_to "View", view_path(book), id: "viewbutton" %>
			<span id="requestbutton" data-book-id="<%= book.id %>"> Request </span>
		</div>
	</div>
	<% end %>

	<%= will_paginate @books, :page_links => false %>
</div>